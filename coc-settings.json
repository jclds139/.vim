{
	"languageserver": {
		"bash": {
			"command": "bash-language-server",
			"args": [ "start" ],
			"filetypes": [ "sh", "bash", "PKGBUILD" ]
		},
		"systemd-language-server": {
			"command": "systemd-language-server",
			"filetypes": ["systemd"]
		},
		"ltex": {
			"command": "ltex-ls-plus",
			"filetypes": [
				"bib",
				"bibtex",
				"context",
				"context.tex",
				"gitcommit",
				"html",
				"markdown",
				"org",
				"pandoc",
				"plaintex",
				"quarto",
				"mail",
				"mdx",
				"rmd",
				"rnoweb",
				"text",
				"restructuredtext",
				"rst",
				"typst",
				"xhtml",
				"rsweave",
				"latex",
				"tex",
				"python",
				"c",
				"cpp",
				"arduino",
				"shellscript",
			],
			"settings": {
				"enabled": [
					"bib",
					"bibtex",
					"context",
					"context.tex",
					"gitcommit",
					"html",
					"markdown",
					"org",
					"pandoc",
					"plaintex",
					"quarto",
					"mail",
					"mdx",
					"rmd",
					"rnoweb",
					"text",
					"restructuredtext",
					"rst",
					"typst",
					"xhtml",
					"rsweave",
					"latex",
					"tex",
					"python",
					"c",
					"cpp",
					"arduino",
					"shellscript",
				],
				"dictionary": {
					"en-US": [
						":spell/en.utf-8.add"
					]

				},
				"completionEnabled": true,
				"languageToolHttpServerUri": "https://localhost:8081/",
			}
		}
	},
	"pylsp.disableProgressNotifications": false,
	"pylsp.plugins.ruff.enabled": false,
	"pylsp.plugins.pycodestyle.maxLineLength": 88, //matches with Ruff defaults
	"ruff.nativeServer": true,
	"java.home": "/usr/lib/jvm/default/",
	"diagnostic-languageserver.filetypes": {
		"tiddlywiki": [ "proselint", "alex-text" ],
		"tex": [ "proselint", "alex" ],
		"latex": [ "proselint", "alex" ],
		"markdown": [ "proselint", "alex" ],
		"systemd": [ "systemd-analyze" ]
	},
	"diagnostic-languageserver.mergeConfig": true,
	"diagnostic-languageserver.formatFiletypes": {
	},
	"diagnostic-languageserver.linters": {
	},
	"snippets.ultisnips.pythonPrompt": false,
	"pydocstring.formatter": "numpy",
}
