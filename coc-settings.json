{
	"languageserver": {
		"ccls": {
			"command": "ccls",
			"filetypes": [ "c", "cpp", "c++", "cc", "objc", "objcpp", "arduino" ],
			"rootPatterns": [ ".ccls-root", "compile_commands.json" ],
			"initializationOptions": {
				"client": {
					"snippetSupport": true
				}
			}
		},
		"bash": {
			"command": "bash-language-server",
			"args": [ "start" ],
			"filetypes": [ "sh" ]
		}
	},
	"java.home": "/usr/lib/jvm/default/",
	"diagnostic-languageserver.filetypes": {
		"tiddlywiki": [ "proselint" ],
		"tex": [ "textidote", "proselint", "alexjs" ],
		"latex": [ "textidote", "proselint", "alexjs" ],
		"markdown": [ "textidote", "proselint", "alexjs" ],
		"python": [ "flake8" ]
	},
	"diagnostic-languageserver.linters": {
		"proselint": {
			"command": "proselint",
			"isStdout": true,
			"isStderr": false,
			"debounce": 100,
			"args": [ "-" ],
			"offsetLine": 0,
			"offsetColumn": 0,
			"sourceName": "proselint",
			"formatLines": 1,
			"formatPattern": [
				"^[^:]+:(\\d+):(\\d+):(\\s)(.*)$",
				{
					"line": 1,
					"column": 2,
					"security": 3,
					"message": 4
				}
			],
			"securities": {
				" ": "info"
			}
		},
		"textidote": {
			"command": "textidote",
			"debounce": 500,
			"args": [ "--check", "en_US", "--dict", "~/.vim/spell/en.utf-8.add",
				"--output", "singleline" ],
				"offsetLine": 0,
				"offsetColumn": 0,
				"sourceName": "textidote",
				"formatLines": 1,
				"formatPattern": [
					"^[^ ]+?\\(L(\\d+)C(\\d+)-L(\\d+)C(\\d+)\\)[^:]*?:(.*)\".*\"(\\r|\\n)*$",
					{
						"line": 1,
						"column": 2,
						"endLine": 3,
						"endColumn": 4,
						"message": 5
					}
				],
				"securities": {
					"undefined": "warning"
				}
		},
		"alexjs": {
			"command": "alexjs",
			"debounce": 200,
			"isStderr": true,
			"args": [ "--stdin" ],
			"offsetLine": 0,
			"offsetColumn": 0,
			"sourceName": "alex.js",
			"formatLines": 1,
			"formatPattern": [
				"^\\s*(\\d+):(\\d+)-(\\d+):(\\d+)\\s{2}([a-z]+)\\s{2}(.*?)\\s{2,}([a-z-]+)\\s{2,}([a-z-]+)$",
				{
					"line": 1,
					"column": 2,
					"endLine": 3,
					"endColumn": 4,
					"security": 5,
					"message": 6
				}
			],
			"securities": {
				"warning": "warning",
				"error": "error"
			}
		},
		"flake8": {
			"command": "flake8",
			"debounce": 100,
			"args": [ "--format=%(row)d,%(col)d,%(code).1s,%(code)s: %(text)s", "-" ],
			"offsetLine": 0,
			"offsetColumn": 0,
			"sourceName": "flake8",
			"formatLines": 1,
			"formatPattern": [
				"(\\d+),(\\d+),([A-Z]),(.*)(\\r|\\n)*$",
				{
					"line": 1,
					"column": 2,
					"security": 3,
					"message": 4
				}
			],
			"securities": {
				"W": "warning",
				"E": "error",
				"F": "error",
				"C": "error",
				"N": "error"
			}
		}
	},
	"python.linting.pylintArgs": [
		"--generated-members=numpy.*,torch.*"
	],
	"snippets.ultisnips.pythonPrompt": false
}
