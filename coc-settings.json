{
	"languageserver": {
		"ccls": {
			"command": "ccls",
			"filetypes": [ "c", "cpp", "c++", "cc", "objc", "objcpp", "arduino" ],
			"rootPatterns": [ ".ccls-root", "compile_commands.json" ],
			"initializationOptions": {
				"cache" : {
					"directory": "/tmp/ccls"
				},
				"client": {
					"snippetSupport": true
				}
			}
		},
		"bash": {
			"command": "bash-language-server",
			"args": [ "start" ],
			"filetypes": [ "sh", "bash", "PKGBUILD" ]
		}
	},
	"ltex.enabled": [
		"bibtex",
		"context",
		"context.tex",
		"html",
		"latex",
		"markdown",
		"org",
		"restructuredtext",
		"rsweave",
		"python",
		"c",
		"cpp",
		"arduino",
		"shellscript"
	],
	"ltex.dictionary": {
		"en-US": [
			":spell/en.utf-8.add"
		]
	},
	"ltex.completionEnabled": true,
	"ltex.additionalRules.motherTongue": "en-US",
	"pylsp.plugins.black.enabled": false,
	"pylsp.plugins.ruff.enabled": true,
	"pylsp.disableProgressNotifications": false,
	"java.home": "/usr/lib/jvm/default/",
	"diagnostic-languageserver.filetypes": {
		"tiddlywiki": [ "proselint", "alex-text" ],
		"tex": [ "proselint", "alex" ],
		"latex": [ "proselint", "alex" ],
		"markdown": [ "proselint", "alex" ],
		"systemd": [ "systemd-analyze" ]
	},
	"diagnostic-languageserver.mergeConfig": true,
	"diagnostic-languageserver.formatFiletypes": {
	},
	"diagnostic-languageserver.linters": {
	},
	"snippets.ultisnips.pythonPrompt": false,
	"pydocstring.formatter": "numpy"
}
